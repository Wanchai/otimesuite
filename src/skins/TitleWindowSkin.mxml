<?xml version="1.0" encoding="utf-8"?>
<s:Skin
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">
		
    <fx:Metadata>
    <![CDATA[
        [HostComponent("spark.components.TitleWindow")]
    ]]>
    </fx:Metadata>
	
    <!-- states -->
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="inactive" />
        <s:State name="inactiveWithControlBar" />
        <s:State name="disabledWithControlBar" />
        <s:State name="normalWithControlBar" />
    </s:states>

	<s:Rect id="background" top="0" left="0" right="0" bottom="0">
		<s:fill>
			<s:SolidColor color="0x000000" />
		</s:fill>
	</s:Rect>
	
	<s:Group id="controlBarGroup" height="55" percentWidth="100">
		
		<s:Label id="titleDisplay" percentWidth="80" styleName="textNormWhite" top="5" left="10" />
		
		<s:Button id="closeButton" skinClass="skins.btn.CloseTitleWindowSkin" right="0" />
		
	</s:Group>
	
	<s:VGroup id="contentGroup" top="60" horizontalAlign="center" percentWidth="100">
		
	</s:VGroup>

</s:Skin>


